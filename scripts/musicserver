#!/bin/bash
init=0
if [ "$1" == '--init' ]
then
  init=1
  pidfile=$2
fi
home=$(dirname $0)
source $home/config
cd $MUSIC_BASE/flask
mkdir -p logs
cd logs
for f in *.err *.out
do
  [[ -f $f ]] && mv $f $f.$(date +%Y-%m-%d_%H-%M)
done
cd ..
cmd="$MUSIC_PYTHON $MUSIC_BASE/flask/server.py"
# kill old instance, if any
oldpid=$(pgrep -f "$cmd")
[[ ! -z $oldpid ]] && { $MUSIC_BASE/scripts/killtree.sh $oldpid; lsof -P | grep LISTEN | grep ":80"; }
cd logs
# cleanup, zip old logs
find . -type f -mtime +60 | $MUSIC_XARGS rm -f
find . -type f \! \( -name \*.gz -o -name \*.out -o -name \*.err \) | $MUSIC_XARGS gzip
cd ..
nohup $cmd >logs/server.out 2>logs/server.err &
if [ ! -z "$pidfile" ]
then
  id
  ls -l $pidfile
  cat $pidfile
  echo $! >$pidfile
fi
